    <h2><%= flashMessage.message %></h2>
    <%}%> -->
    <div class="container-register">
      <div class="heading">
        <p>New Task Form</p>
      </div>
      <hr />
      <form action="/task" method="POST">
        <div class="form-body">
          <div class="form-group">
            <label for="name"><i class="fa fa-tasks" aria-hidden="true"></i> Name:</label>
            <input
              type="text"
              name="name"
              id="name"
              placeholder="Enter the name of the task"
            />
          </div>
          <div class="form-group">
            <label for="duedate"><i class="fa fa-calendar-plus-o" aria-hidden="true"></i> Due Date:</label>
            <input type="date" id="duedate" name="duedate" />
          </div>
          <div class="form-group">
            <label for="label"><i class="fa fa-tag" aria-hidden="true"></i> Label:</label>
            <select name="label" id="label">
              <option value="work">Work</option>
              <option value="personal">Personal</option>
              <option value="study">Study</option>
              <option value="shopping">Shopping</option>
              <option value="others">Others</option>
            </select>
          </div>
          <div class="form-group">
            <label><i class="fa fa-pencil" aria-hidden="true"></i> Description:</label>
            <textarea name="description" id="description"></textarea>
          </div>
          <div id="btn-group">
            <button type="submit" id="log-sign-btn">Add New Task</button>
          </div>
        </div>
      </form>
    </div>

<%- include("./partials/footer") %>






















